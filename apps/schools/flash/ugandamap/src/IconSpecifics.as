package{	import flash.display.Sprite;	import flash.events.*;	import flash.text.TextField;	import flash.text.TextFormat;		public class IconSpecifics extends Sprite{		//private variables		private var teacherStat:Number;		private var boyStat:Number;		private var girlStat:Number;		private var waterStat:Number;				private var teacherTXT:TextField;		private var mStudentTXT:TextField;		private var fStudentTXT:TextField;		private var waterTXT:TextField;		private var style:TextFormat;				//constructor		public function IconSpecifics(t:Number) { //b:Number, g:Number, w:Number){			teacherStat = t;			//boyStat = b;			//girlStat = g;			//waterStat = w;			style = new TextFormat();			style.color = 0xFFFFFF;			style.font = "_sans";			style.size = 14;						drawSpecifics();		}				private function drawSpecifics():void {			graphics.beginFill(0x000000,.7);			//creates shape of info bubble			graphics.lineTo(-5,0);			graphics.lineTo(15,-20);			graphics.lineTo(15,-100);			graphics.lineTo(200,-100);			graphics.lineTo(200,0);						graphics.lineTo(-5,0);			//graphics.drawRect(5,-50,200,100);			graphics.endFill();						teacherTXT = new TextField();			teacherTXT.text = "Teacher Attendance: " + teacherStat;			teacherTXT.setTextFormat(style);			teacherTXT.selectable = false;			teacherTXT.width = 200;			teacherTXT.x = 30;			teacherTXT.y = -90;			addChild(teacherTXT);						teacherTXT = new TextField();			teacherTXT.text = "Boys Attendance: " + teacherStat; //boyStat			teacherTXT.setTextFormat(style);			teacherTXT.selectable = false;			teacherTXT.width = 200;			teacherTXT.x = 30;			teacherTXT.y = -70;			addChild(teacherTXT);						teacherTXT = new TextField();			teacherTXT.text = "Girls Attendance: " + teacherStat; //girlStat			teacherTXT.setTextFormat(style);			teacherTXT.selectable = false;			teacherTXT.width = 200;			teacherTXT.x = 30;			teacherTXT.y = -50;			addChild(teacherTXT);						teacherTXT = new TextField();			teacherTXT.text = "Water Quality: " + teacherStat; //waterStat			teacherTXT.setTextFormat(style);			teacherTXT.selectable = false;			teacherTXT.width = 200;			teacherTXT.x = 30;			teacherTXT.y = -30;			addChild(teacherTXT);					}	}}